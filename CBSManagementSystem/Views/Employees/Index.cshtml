@model IEnumerable<CBSManagementSystem.Models.Employee>

<style>
    /* General Body Styling */
    body, html {
        margin: 0;
        padding: 0;
        width: 100%;
        background-color: #3b3026; /* Dark background color */
        font-family: 'Arial', sans-serif;
        color: #eae7dc; /* Light text color for contrast */
    }

    /* Container Styling */
    .container {
        max-width: 1200px; /* Constrain container width */
        margin: 20px auto; /* Center container and add top/bottom spacing */
        padding: 20px;
        background-color: #fdfcf9; /* Light background for content */
        border-radius: 10px; /* Rounded corners for container */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Subtle shadow */
    }

    /* Page Banner */
    .page-banner {
        background-color: #fdfcf9; /* Light background for the banner */
        padding: 30px 0;
        border-bottom: 1px solid #ddd;
    }

    .page-banner .page-title {
        font-size: 2.5rem;
        font-weight: bold;
        color: #3b3026; /* Dark text color for visibility */
        margin-bottom: 10px;
    }

    .breadcrumb {
        background: transparent;
        padding: 0;
        margin: 0;
        list-style: none;
        display: inline-flex;
        font-size: 1rem;
        color: #6f5d4c; /* Darker color for better contrast */
    }

    .breadcrumb-item + .breadcrumb-item::before {
        content: "/";
        margin: 0 5px;
        color: #6f5d4c; /* Match breadcrumb text color */
    }

    .breadcrumb-item a {
        color: #3b3026; /* Dark link color for visibility */
        text-decoration: none;
    }

    .breadcrumb-item a:hover {
        text-decoration: underline;
    }

    /* Table Styling */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden;
    }

    .table th,
    .table td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .table th {
        background-color: #b29d8d; /* Match banner color */
        color: #fff;
        font-weight: bold;
    }

    .table tr:hover {
        background-color: #f9f9f9;
    }

    .table .btn {
        border-radius: 20px;
    }

    .table .btn-primary {
        background-color: #b29d8d;
        border: none;
    }

    .table .btn-danger {
        background-color: #dc3545;
        border: none;
    }

    /* Button Styling */
    .btn-success {
        background-color: #8c705a; /* Styled button color */
        border: none;
        border-radius: 20px;
        padding: 10px 20px;
        font-size: 1rem;
        color: #fff;
    }


</style>

<body>
    <section class="page-banner">
        <div class="container">
            <img class="img-responsive" src="images/Employee.jpg" alt="About Us" style="width: 100%; border-radius: 10px;">
            <div class="text-center">
                <h1 class="page-title">Employee List</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Employee List</li>
                    </ol>
                </nav>
            </div>
        </div>
    </section>

    <div class="container">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Date of Birth</th>
                        <th scope="col">Phone No</th>
                        <th scope="col">Position</th>
                        <th scope="col">Salary</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.EmpName</td>
                            <td>@employee.DOB.ToShortDateString()</td>
                            <td>@employee.PhoneNo</td>
                            <td>@employee.Position</td>
                            <td>@String.Format("{0:C}", employee.EmpSalary)</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@employee.EmpID" class="btn btn-sm btn-primary me-2">Edit</a>
                                <a asp-action="Delete" asp-route-id="@employee.EmpID" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-end mt-3">
            <a asp-action="Create" class="btn btn-success">Add New Employee</a>
        </div>
    </div>
</body>
